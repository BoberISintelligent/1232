
server:
  port: 8080

spring:
  datasource:
    jdbc-url: "<url>"
    username: "<username>"
    password: "<password>"
  mail:
    host: "<mailhost>"
    properties:
      mail:
        transport:
          protocol: "smtp"
        smtp:
          port: 587
          starttls:
            enable: true


easy:
  core:
    auth-enabled: true
    mail:
      sys:
        enabled: true
        from: "<from-address>"
        to: "<to-address>"
    auto-assess:
        allowed-wait-for-user:
          ms: "45000"
        timeout-check:
          cron: "0 * * * * *"
          clear-older-than:
            ms: "460000"
        fixed-delay:
          ms: "3000"
        fixed-delay-observer-clear:
          ms: "3000"

    moodle-sync:
      users:
        url: "<url>"
        cron: "0 5 4 * * *"
      grades:
        url: "<url>"

    pending-access:
      clean:
        cron: "0 5 3 * * *"

    exercise-index-normalisation:
      cron: "0 5 3 * * *"
